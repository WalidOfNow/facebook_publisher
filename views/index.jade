extends layout

block content
  .navbar.navbar-inverse.navbar-fixed-top
    .navbar-inner
      .container
        a.brand(href='/') Wikitechie Facebook Publisher
        ul.nav
          li
            a(href='#') Home
          li
            a(href='#') User
          li
            a(href='#') About
        ul.nav.pull-right
          li
            a.brand(class='pull-right') #{user.first_name}
          li
            a(href='/logout',class='pull-right') Logout
  .container
    .row-fluid
      .span3
        .well
          h5 <b>Groups...</b>
        .well.scrollbar#style-1
          each item, i in groups
            label(class='checkbox') #{item.name}
              input(type='checkbox',id='#{item.id}')
              hr
      .span7
        .well
          h4 Type your post..
          form(method='post', action='/post')
            textarea(type='text',name='textinput' , class='span10',name='text' )
            br
            input(type='checkbox',id='me')
            input(type='submit',value='Publish It !',class= 'btn btn-success pull-right')


      .span2
        .well
          h5 User Info..
          <strong>User :</strong>
          p(class='text-info')     #{user.name}
          <strong>location :</strong>
          p(class="text-success")   #{user.location.name}
block scripts
    script(src='/javascript/jquery.js')
    script(src='/javascript/load.js')

        
